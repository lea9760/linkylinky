      --button: #576f59;
    }

    body.dark-mode {
      --bg: #43544b;
      --card: #576f59;
      --text: #f4f1da;
    }

    body {
      background: var(--bg);
      color: var(--text);
      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
      margin: 0;
      padding: 20px;
    }

    h1 {
      text-align: center;
